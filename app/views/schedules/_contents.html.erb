<div class = "contents">
  <div class = "calendars">
    <%= month_calendar events: @schedules do |date, schedules| %>
      <%= date.day %>
      <%array = []%>
      <% schedules.each do |schedule| %>
        <% array << schedule.price%>
      <% end %>
      <div>
        <%if array.sum < 0%>
        <%= array.sum %>
        <%end%>
      <div>
    <% end %>
  </div>

  <div class = "side-bar">
    <p id="notice"><%= notice %></p>

      <h1>支出</h1>

      <table>
        <thead>
          <tr>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @schedules.each do |schedule| %>
            <tr>
              <td><%= schedule.start_time.day %></td>
              <td><%= schedule.memo%></td>
              <td><%= link_to '詳細', schedule %></td>
              <td><%= link_to '編集', edit_schedule_path(schedule) %></td>
              <td><%= link_to '削除', schedule, method: :delete, data: { confirm: '削除してもいいですか？' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to '支出を入力する', new_schedule_path %>
  </div>
</div>
